<div class="container">
    <div class="row">
        <div class="col-md-6">

            <div class="row">

                <!-- Patients table -->
                <div class="col-md-3">
                    <!-- A button that shows a log of all sick patients -->
                    <button id="logSick" class="btn btn-primary">Waiting Room</button>
                </div>
                <div class="col-md-3">
                    <!-- A button that shows a log of recovered patients -->
                    <button id="logRecovered" class="btn btn-success">Cured Patients</button>
                </div>
                <div class="col-md-3">
                    <!-- A button that shows a log of all dead patients -->
                    <button id="logDead" class="btn btn-dark">Dead Patients</button></div>
                <div class="col-md-3">
                    <!-- A button that makes a post request to /api/patient route whci generates a new patient and adds them to database -->
                    <button class="btn btn-secondary" id="admit">Admit Patient</button>
                </div>
                <div class="col-md-12">
                    <!-- A button that shows a log of all dead patients -->
                    <button id="CleanRecords" class="btn btn-warning">Call the cleanup crew!</button>
                </div>
            </div>


            <table id="patientsTable">
                <thead>
                    <tr>
                        <th class="font-weight-light">Image</th>
                        <th class="font-weight-light">First Name</th>
                        <th class="font-weight-light">Last Name</th>
                        <th class="font-weight-light">Gender</th>
                        <th class="font-weight-light">Age</th>
                        <th class="font-weight-light">Condition</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
        <!-- col 2 -->
        <div class="col-md-6">
            <!-- col 2 sub row -->
            <div class="row">
                <!-- col 2 sub row col 1 -->
                <div class="col-6">
                    Trust me, I'm a doctor
                    <img src="surgicalAvator.png" alt="" width="300" height="300">
                </div>
                <!-- col 2 sub row col 2 -->
                {{!-- This empty div will display the patient on the operating table. --}}
                <div class="col-6 border">
                    <div id="operatingTable"></div>
                </div>
            </div>
            <!-- end of sub row -->

            <!-- within col 2 -->
            <!-- button to be centered -->
            <button id="operate" class="btn btn-info mx-5">operate</button>
            <br>
            <br>

            <!-- Log surgery results ... -->
            <ul id="activityLog"></ul>
        </div>

    </div>
    <div class="row border">
        <div id="myBar">
            <div id="myProgress"> </div>
        </div>
    </div>
</div>